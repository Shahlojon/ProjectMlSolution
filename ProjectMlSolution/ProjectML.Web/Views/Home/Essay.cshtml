        font-size: 28px;
        color: #333;
        font-weight: bold;
    }
    span{
        color: #808080;
     }
    .site-section {
        padding: 130px!important;
    }
</style>
<div class="site-section">

    <div class="container">
        <div class="row justify-content-center">
            <form asp-action="Essay">
