                <div class="form-group col-md-12">
                    <label asp-for="Lesson.SubjectId" class="text-center control-label">Фан : 
                    <span class="control-label">@ViewBag.Subject.Name</span>
                    </label>
                    
                    <span asp-validation-for="Lesson.SubjectId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <h1><label asp-for="LessonId" class="control-label">Мавзуъ</label></h1>
                    <select asp-for="LessonId" class="form-control form-control-lg">
                        @foreach (var lesson in ViewBag.Lesson)
                        {
                            <option value="@lesson.Id">@lesson.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <h1><label class="control-label">Алгоритм</label></h1>
                    <select name="algorithmId" class="form-control form-control-lg" asp-items="ViewBag.AlgorithmId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Эссе</label>
                    <textarea class="form-control summernote" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Essay" class="btn btn-info" />
                </div>

            </form>

        </div>
    </div>
</div>

