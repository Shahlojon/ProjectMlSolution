@model LoginModel

<div class="site-section">
    <div class="container">
        <h2 class="text-center">Вход на сайт</h2>

        <form asp-action="Login" class="row justify-content-center" style="margin-top: 60px;" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="UserName">Логин</label>
                    <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                    <span asp-validation-for="UserName" />
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Password">Рамз</label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="col-12 form-group">
                    <input type="submit" value="Воридшавӣ" class="btn btn-info btn-lg px-5" />
                    <a asp-action="Register" asp-controller="Account" style="font-weight: bold;">Регистрация</a>
                </div>
            </div>
        </form>
    </div>
</div>
