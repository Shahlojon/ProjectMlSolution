@model RegisterViewModel

<div class="site-section">
    <div class="container">
        <h2 class="text-center">Регистрация</h2>

        <form asp-action="Register" class="row justify-content-center" style="margin-top: 60px;" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="Username">Логин</label>
                    <input type="text" asp-for="Username" class="form-control form-control-lg" />
                    <span asp-validation-for="Username" />
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="FIO">ФИО</label>
                    <input type="text" asp-for="FIO" class="form-control form-control-lg" />
                    <span asp-validation-for="FIO" />
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Email">Почта</label>
                    <input type="text" asp-for="Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Password">Рамз</label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg"/>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div class="col-12 form-group">
                    <input type="submit" value="Регистрация" class="btn btn-info btn-lg px-5" />
                </div>
            </div>
        </form>
    </div>
</div>